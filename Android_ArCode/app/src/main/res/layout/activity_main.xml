<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- Full-screen camera preview.
         The TextureView fills the entire screen.  A Matrix transform is applied
         at runtime (see fixPreviewAspectRatio() in MainActivity) to correct the
         aspect ratio so the image is never stretched. -->
    <TextureView
        android:id="@+id/texture_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ── Status bar (top) ──────────────────────────────────────────────── -->
    <LinearLayout
        android:id="@+id/statusPanel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#CC000000"
        android:padding="12dp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Live frame / marker counter updated every detection cycle -->
        <TextView
            android:id="@+id/statusTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Initializing..."
            android:textColor="#00FF00"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="monospace" />
    </LinearLayout>

    <!-- ── Log window (top-right, scrollable) ────────────────────────────── -->
    <ScrollView
        android:id="@+id/logScrollView"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_margin="8dp"
        android:background="#CC000000"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/statusPanel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.45">

        <TextView
            android:id="@+id/logTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logs..."
            android:textColor="#FFFF00"
            android:textSize="10sp"
            android:fontFamily="monospace" />
    </ScrollView>

    <!-- ── Bottom control panel ──────────────────────────────────────────── -->
    <LinearLayout
        android:id="@+id/controlPanel"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#DD000000"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Camera selector row.
             Spinner is populated at runtime with all available cameras.
             Labels include facing direction and field-of-view when reported
             by the device (e.g. "Camera 0 — back (FoV 78.0°)"). -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Camera:"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginEnd="8dp" />

            <!-- Spinner items are added programmatically in populateCameraSpinner() -->
            <Spinner
                android:id="@+id/cameraSpinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#FFFFFF" />
        </LinearLayout>

        <!-- IP Address + Connect row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Server IP:"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:layout_marginEnd="8dp" />

            <EditText
                android:id="@+id/ipAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="192.168.1.100"
                android:text="192.168.1.199"
                android:textColor="#FFFFFF"
                android:textColorHint="#888888"
                android:backgroundTint="#FFFFFF"
                android:inputType="text"
                android:maxLines="1" />

            <Button
                android:id="@+id/connectButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Connect"
                android:textSize="12sp"
                android:backgroundTint="#0088FF" />
        </LinearLayout>

        <!-- Exit button — calls shutdownAndExit() for graceful teardown -->
        <Button
            android:id="@+id/exitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Exit"
            android:textSize="14sp"
            android:textStyle="bold"
            android:backgroundTint="#CC0000" />

        <!-- Static hint text -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="Detecting ArUco markers: ID 0 = Left, ID 1 = Right, ID 2 = HMD"
            android:textColor="#AAAAAA"
            android:textSize="10sp"
            android:gravity="center" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>